
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// ============================================
// AUTHENTICATION MODELS (NextAuth.js)
// ============================================

/**
 * Account Model
 * Stores OAuth provider account information
 */
model Account {
  id                String  @id @default(cuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
  @@map("accounts")
}

/**
 * Session Model
 * Manages user sessions
 */
model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("sessions")
}

/**
 * User Model
 * Core user authentication and profile data
 */
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime? @map("email_verified")
  image         String?
  password      String
  role          String    @default("ADMIN")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  accounts Account[]
  sessions Session[]

  @@index([email])
  @@map("users")
}

/**
 * Verification Token
 * For email verification and password reset
 */
model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// ============================================
// APPLICATION MODELS
// ============================================

/**
 * Student Model
 * Stores student athlete information
 */
model Student {
  id               BigInt   @id @default(autoincrement()) @map("aluno_id")
  name             String   @map("nome")
  registrationCode String   @map("matricula")
  phoneNumber      String?  @map("numero_cel") @db.VarChar(20)
  age              Int      @db.SmallInt
  weight           Float    @map("peso") @db.Real
  height           Float    @map("altura") @db.Real
  sportName        String   @map("esporte")
  sportAlterName   String   @map("esporte_alter_name")
  subCategory      String   @map("sub")
  shift            String   @map("turno")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  sport            Sport       @relation("StudentSport", fields: [sportName], references: [name], onDelete: Restrict)
  sportByAlterName Sport       @relation("StudentSportAlterName", fields: [sportAlterName], references: [alterName], onDelete: Restrict)
  subCategoryRef   SubCategory @relation(fields: [subCategory], references: [name], onDelete: Restrict)
  shiftRef         Shift       @relation(fields: [shift], references: [name], onDelete: Restrict)

  @@index([sportName])
  @@index([subCategory])
  @@index([shift])
  @@index([name])
  @@map("students")
}

/**
 * Sport Model
 * Defines available sports
 */
model Sport {
  id        Int    @id @default(autoincrement()) @map("esporte_id") @db.SmallInt
  name      String @unique @map("esporte_name")
  alterName String @unique @map("alter_name")
  route     String @unique
  imageUrl  String @map("img")
  imageHeader String @default("") @map("img_2")

  createdAt DateTime @default(now()) @map("created_at")

  students            Student[] @relation("StudentSport")
  studentsByAlterName Student[] @relation("StudentSportAlterName")
  teachers            Teacher[]

  @@index([route])
  @@map("sports")
}

/**
 * Teacher Model
 * Stores coaching staff information
 */
model Teacher {
  id               BigInt @id @default(autoincrement()) @map("professor_id")
  name             String @map("professor_nome")
  email            String @map("professor_email")
  shift            String @map("turno")
  sportId          Int    @map("esporte_id") @db.SmallInt
  subCategory      String @map("sub")
  registrationCode String @map("matricula")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  sport Sport @relation(fields: [sportId], references: [id], onDelete: Restrict)

  @@index([email])
  @@index([sportId])
  @@map("teachers")
}

/**
 * SubCategory Model
 * Defines age groups (Sub-6, Sub-8, etc.)
 */
model SubCategory {
  id       Int     @id @default(autoincrement()) @map("sub_id") @db.SmallInt
  name     String  @unique @map("sub")
  idealBMI Float?  @map("imc_ideal") @db.Real

  createdAt DateTime @default(now()) @map("created_at")

  students        Student[]
  idealBMIRecords IdealBMI[]

  @@map("sub_categories")
}

/**
 * IdealBMI Model
 * Reference BMI values for age groups
 */
model IdealBMI {
  id          BigInt @id @default(autoincrement())
  bmiValue    Float  @map("imc") @db.Real
  subCategory String @map("sub")

  createdAt DateTime @default(now()) @map("created_at")

  subCategoryRef SubCategory @relation(fields: [subCategory], references: [name], onDelete: Restrict)

  @@index([subCategory])
  @@map("ideal_bmi")
}

/**
 * Shift Model
 * Class shifts (Morning, Afternoon, Night)
 */
model Shift {
  id   Int    @id @default(autoincrement()) @map("turno_id") @db.SmallInt
  name String @unique @map("turno")

  createdAt DateTime @default(now()) @map("created_at")

  students Student[]

  @@map("shifts")
}

// ============================================
// ENUMS
// ============================================

enum Role {
  ADMIN
  PROF

  @@map("user_role")
}
